@model RegistrarUsuarios.Models.FuncionarioList

@{
    ViewData["Title"] = "Editar dados do funcionário";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header text-center">
                <h2>Editar dados do funcionário</h2>
            </div>
            <div class="card-body">
                <form asp-action="Editar" method="post">
                    <input type="hidden" asp-for="Funcionario.Id" />
                    
                    <div class="form-group">
                        <label asp-for="Funcionario.Nome" class="control-label">Nome</label>
                        <input asp-for="Funcionario.Nome" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Funcionario.Email" class="control-label">E-mail</label>
                        <input asp-for="Funcionario.Email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Funcionario.SenhaEmail" class="control-label">Senha Email</label>
                        <input asp-for="Funcionario.SenhaEmail" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Funcionario.Tipo" class="control-label">Tipo Acesso</label>
                        <select asp-for="Funcionario.Tipo" asp-items="Model.TipoAcesso" class="form-control"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Funcionario.Senha" class="control-label">Senha</label>
                        <input asp-for="Funcionario.Senha" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Funcionario.Departamento" class="control-label">Departamento</label>
                        <input asp-for="Funcionario.Departamento" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Funcionario.Cargo" class="control-label">Cargo</label>
                        <input asp-for="Funcionario.Cargo" class="form-control" />
                    </div>
                    <div class="form-group text-center mt-4">
                        <input type="submit" value="Editar" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
